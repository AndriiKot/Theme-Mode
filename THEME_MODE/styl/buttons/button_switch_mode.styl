@import "../variables/*.styl"

buttons_style(top = 0)
    position relative
    min-width 110px
    color: inherit
    background-color inherit
    cursor pointer
    font-size 1.2rem
    padding 7px 7px 7px 10px
    margin 20px 15px 0px 15px
    letter-spacing .3rem
    z-index 100
    &:hover
        box-shadow inset 0 0 0 2px var(--color-border)
        background-color var(--color-border)
        color var(--color-background)
        



